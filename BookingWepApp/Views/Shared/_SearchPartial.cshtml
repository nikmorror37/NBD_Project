@model BookingWepApp.Models.HotelsViewModel

<h1 id="heading">Список отелей</h1>
<br />

<form asp-controller="Home" asp-action="Search" method="post" id="search-form" class="collapse">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <div class="form-group">
            <div class="input-group mb-1">
                <input asp-for="@Model.SearchKeyword" class="input-group-text bg-white form-control p-4 custom-file" id="search-input" type="text" autocomplete="off" placeholder="Поиск отеля по названию">
                <button type="submit" class="btn btn-success" id="submit-btn" style="background-color: rgb(35, 110, 170)">Поиск</button>
            </div>
            <a asp-action="Index" asp-controller="Home" asp-route-clear="true" class="btn btn-success" style="background-color: rgb(35, 110, 170)">Очистить</a>
        </div>
    </div>
</form>
<hr />